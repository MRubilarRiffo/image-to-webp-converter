{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "node ./node_modules/electron/cli.js .",
    "electron:build": "next build && electron-builder build --win"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "next": "16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "asarUnpack": [
      "**/*.node"
    ],
    "afterPack": "./hooks/afterPack.js",
    "appId": "com.imageconverter.app",
    "productName": "Image Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      ".next/standalone/**/*",
      ".next/static/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app.asar.unpacked/.next/standalone",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "app.asar.unpacked/public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": "app.asar.unpacked/.next/standalone/.next/static",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    }
  }
}